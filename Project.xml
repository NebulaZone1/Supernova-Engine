<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- _________________________ Application Settings _________________________ -->

	<app title="Friday Night Funkin': Everlast Engine" file="Everlast Engine" packageName="com.nebulazone.everlast-engine" package="com.nebulazone.everlast-engine" main="funkin.Main" version="0.1.0" company="NebulaZone" />

	<app preloader="flixel.system.FlxPreloader" />
	<set name="SWF_VERSION" value="11.8" />

	<!-- ____________________________ Window Settings ___________________________ -->

	<!--These window settings apply to all targets-->
	<window width="1280" height="720" fps="" background="#000000" hardware="true" vsync="false" />

	<!--HTML5-specific-->
	<window if="html5" resizable="true" />

	<!--Desktop-specific-->
	<window if="desktop" orientation="landscape" fullscreen="false" resizable="true" vsync="false"/>

	<!--Mobile-specific-->
	<window if="mobile" orientation="landscape" fullscreen="true" width="0" height="0" resizable="false"/>

	<!-- _____________________________ Path Settings ____________________________ -->

	<set name="BUILD_DIR" value="export/debug" if="debug" />
	<set name="BUILD_DIR" value="export/release" unless="debug" />
	<set name="BUILD_DIR" value="export/32bit" if="32bit" />

	<classpath name="source" />

	<assets path="assets/funkin"	exclude="*.ogg" if="web"/>
	<assets path="assets/funkin"  exclude="*.mp3|*.mp4" unless="web"/>
	<assets path="assets/core"	exclude="*.ogg" if="web"/>
	<assets path="assets/core"  exclude="*.mp3|*.mp4" unless="web"/>
	
	<define name="PRELOAD_ALL" unless="web" />
	<define name="NO_PRELOAD_ALL" unless="PRELOAD_ALL"/>
	
	<section if="PRELOAD_ALL">
		<library name="songs"    preload="true" />
		<library name="videos"   preload="true" />
	</section>
	
	<section if="NO_PRELOAD_ALL">
		<library name="songs"    preload="false" />
		<library name="videos"   preload="false" />
	</section>
	
	<assets path="assets/funkin/songs"    library="songs"    exclude="*.ogg" if="web"/>
	<assets path="assets/funkin/songs"    library="songs"    exclude="*.mp3|*.mp4" unless="web"/>
	
	<assets path="assets/funkin/videos" exclude="*.mp3" if="web"/>
	<assets path="assets/funkin/videos" exclude="*.ogg" unless="web"/>
	
	<assets path="plugins/" rename='' if="windows"/>
	<assets path="dlls/" rename='' if="windows"/>

	<assets path='example_mods' rename='mods' embed='false'/>
	<assets path='art/readme.txt' rename='do NOT readme.txt' embed='true' />

	<assets path="CHANGELOG.md" rename='changelog.txt'/>

	<!-- ______________________________ Defines _____________________________ -->

	<define name="FLX_NO_FOCUS_LOST_SCREEN" />
	<define name="FLX_NO_DEBUG" unless="debug" />
	<define name="NAPE_RELEASE_BUILD" unless="debug" />

	<!-- You can disable these if you want by just commenting them out -->
	<define name="USE_INST_TIME" if="html5" />
	<define name="USE_SHADERS" />

	<!-- _______________________________ Libraries ______________________________ -->

	<haxelib name="flixel" />

	<haxelib name="flixel-nebulazone" />

	<haxelib name="flixel-addons" />

	<haxelib name="hscript" />

	<define name="hscriptPos" />

	<haxelib name="hscript-improved" />
	
	<haxelib name="away3d" />

	<haxelib name="polymod" />

	<haxelib name="linc_discord-rpc" if="desktop" />

	<!-- _________________________________ Custom _______________________________ -->
	
	<icon path="art/icon16.png" size='16'/>
	<icon path="art/icon32.png" size='32'/>
	<icon path="art/icon64.png" size='64'/>
	<icon path="art/iconOG.png" />
	
</project>
